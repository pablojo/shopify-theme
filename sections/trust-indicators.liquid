{{ 'section-trust-indicators.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="trust-indicators-section section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <p class="section-subtitle">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    <div class="trust-indicators__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'stat' -%}
            <div class="trust-stat animate-professional-fade-in" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="trust-stat__icon">
                  {% case block.settings.icon %}
                    {% when 'users' %}
                      {% render 'icon-users' %}
                    {% when 'globe' %}
                      {% render 'icon-globe' %}
                    {% when 'award' %}
                      {% render 'icon-award' %}
                    {% when 'shield' %}
                      {% render 'icon-shield' %}
                    {% when 'clock' %}
                      {% render 'icon-clock' %}
                    {% when 'star' %}
                      {% render 'icon-star' %}
                    {% else %}
                      {% render 'icon-check' %}
                  {% endcase %}
                </div>
              {%- endif -%}
              
              {%- if block.settings.number != blank -%}
                <div class="trust-stat__number">{{ block.settings.number }}</div>
              {%- endif -%}
              
              {%- if block.settings.label != blank -%}
                <div class="trust-stat__label">{{ block.settings.label }}</div>
              {%- endif -%}
            </div>
            
          {%- when 'certification' -%}
            <div class="trust-certification animate-professional-fade-in" {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                <div class="trust-certification__image">
                  {{
                    block.settings.image
                    | image_url: width: 200
                    | image_tag:
                      loading: 'lazy',
                      widths: '100, 150, 200',
                      sizes: '150px',
                      alt: block.settings.image.alt | escape
                  }}
                </div>
              {%- endif -%}
              
              {%- if block.settings.title != blank -%}
                <h3 class="trust-certification__title">{{ block.settings.title }}</h3>
              {%- endif -%}
              
              {%- if block.settings.description != blank -%}
                <p class="trust-certification__description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
            
          {%- when 'feature' -%}
            <div class="trust-feature animate-professional-fade-in" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="trust-feature__icon">
                  {% case block.settings.icon %}
                    {% when 'shipping' %}
                      {% render 'icon-truck' %}
                    {% when 'support' %}
                      {% render 'icon-headset' %}
                    {% when 'quality' %}
                      {% render 'icon-quality' %}
                    {% when 'security' %}
                      {% render 'icon-lock' %}
                    {% when 'warranty' %}
                      {% render 'icon-shield-check' %}
                    {% when 'certified' %}
                      {% render 'icon-certificate' %}
                    {% else %}
                      {% render 'icon-check' %}
                  {% endcase %}
                </div>
              {%- endif -%}
              
              <div class="trust-feature__content">
                {%- if block.settings.title != blank -%}
                  <h3 class="trust-feature__title">{{ block.settings.title }}</h3>
                {%- endif -%}
                
                {%- if block.settings.description != blank -%}
                  <p class="trust-feature__description">{{ block.settings.description }}</p>
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    
    {%- if section.settings.show_badges -%}
      <div class="trust-badges">
        <div class="trust-badge-item">
          {% render 'icon-shield' %}
          <span>FDA Approved</span>
        </div>
        <div class="trust-badge-item">
          {% render 'icon-certificate' %}
          <span>ISO 13485 Certified</span>
        </div>
        <div class="trust-badge-item">
          {% render 'icon-award' %}
          <span>Industry Leader</span>
        </div>
        <div class="trust-badge-item">
          {% render 'icon-lock' %}
          <span>Secure Shopping</span>
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

